<style>
  .announcementbar-text {
    text-align: center;
    padding: 2px 0;
  }
  .announcementbar-mobile {
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
    display: block;
  }
  .announcementbar-desktop {
    display: none;
  }
  @media (min-width: 750px) {
    .announcementbar-text {
      padding: 18px 0;
    }
    .announcementbar-mobile {
      display: none;
    }
    .announcementbar-desktop {
      font-size: 20px;
      font-style: normal;
      font-weight: 700;
      line-height: 110%;
      display: block;
    }
  }
</style>

<div
  class="utility-bar color-{{ section.settings.color_scheme }}"
>
  <div class="announcementbar-text">
    <span class="announcementbar-desktop small-hide">{{ section.settings.text_desktop }}</span>
    <span class="announcementbar-mobile medium-hide large-up-hide">{{ section.settings.text_mobile }}</span>
  </div>
</div>

